        <Label Content="Change 1" FontSize="22
               " HorizontalAlignment="Left" Margin="98,83,0,0" VerticalAlignment="Top" Width="106" Grid.Row="1"/>
        <Label Content="Change 2" FontSize="22                " HorizontalAlignment="Left" Margin="421,83,0,0" VerticalAlignment="Top" Width="106" Grid.Row="1"/>
